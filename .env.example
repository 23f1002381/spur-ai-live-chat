# Database
DATABASE_URL="file:./dev.db"

# Server
PORT=3000
NODE_ENV=development

# GROQ API (preferred name: GROQ_API_KEY). For local development the app will use a small DEV mock if this is not set.
# In production, set one of: GROQ_API_KEY, GROQ_API, GROQ_API_TOKEN, or GROQ_KEY
GROQ_API_KEY=your_groq_api_key_here
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend API URL (for CORS)
FRONTEND_URL=http://localhost:5173

# LLM Configuration
MAX_MESSAGE_LENGTH=2000
MAX_TOKENS=500
